# Compiler
CXX = g++
CXXFLAGS = -Wall -Wextra -std=c++17 -Iinclude

# Source and build setup
SRC = src/person.cpp main.cpp
OBJ = $(SRC:.cpp=.o)
TARGET = my_program

# Build target
$(TARGET): $(OBJ)
	$(CXX) $(OBJ) -o $(TARGET)

# Compile .cpp -> .o
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Clean build files
clean:
	rm -f $(OBJ) $(TARGET)

# Add test target
test: src/person.cpp src/utils.cpp tests/test.cpp
	$(CXX) $(CXXFLAGS) $^ -o test